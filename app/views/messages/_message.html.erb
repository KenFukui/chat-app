<div class="message">
      <div class="up-mess">
        <div class="mess-name">
         <%= message.user.name %>
        </div>
        <div class="mess-date">
         <%= l message.created_at %>
        </div>
      </div>
      <div class="down-mess">
        <div class="comment">
         <%= message.content %>
        </div>
         <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
      </div>
  </div>